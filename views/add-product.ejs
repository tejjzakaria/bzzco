                                                            <input type="text" class="form-control" id="productIdNumber"
                                                                name="productIdNumber" placeholder="Enter ID number">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Right Column -->
                                        <div class="col-12 col-lg-6">
