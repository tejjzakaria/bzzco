                                                    <!-- Frozen Product -->
                                                    <div class="mb-3">
                                                        <div class="form-check mb-2">
                                                            <input class="form-check-input" type="checkbox"
                                                                name="attributes[frozen]" id="frozen">
                                                            <label class="form-check-label" for="frozen">
                                                                Frozen Product
