                                                        <label class="form-label" for="quantity">Quantity *</label>
                                                        <input type="number" class="form-control" id="quantity"
                                                            name="quantity" placeholder="Enter quantity" min="0"
                                                            required>
                                                    </div>

                                                    <!-- Vendor -->
